{
	"usingComponents": {
    "icon": "/path/to-icon/icon"
  },
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ 
		{
			"path": "pages/Home/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/Answer/index",
			"style": {
				"navigationBarTitleText": "答疑星球"
			}
		},
		{
			"path": "pages/PersonalCenter/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/Forum/index",
			"style": {
				"navigationBarTitleText": "话题论坛"
			}
		},
		{
			"path": "components/Post/index",
			"style": {
				"navigationBarTitleText": "帖子详情"
			}
		},
		{
			"path": "components/search",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		}
	],
	"subPackages": [
		{
			"root": "page_home",
			"pages": [
				{
					"path": "differentKinds/index",
					"style": {
						"navigationBarTitleText": "类别"
					}
				},
				{
					"path": "articleDetail/index",
					"style": {
						"navigationBarTitleText": "文章详情"
					}
				}
			]
		}, {
		"root": "page_answer",
		"pages": [
			{
				"path": "edit/index",
				"style": {
					"navigationBarTitleText": "编辑"
				}
			}
		]
	}, {
		"root": "page_forum",
		"pages": [{
			"path": "ForumDetail/index",
			"style": {
				"navigationBarTitleText": "xx吧"
			}
		}]
	}, {
		"root": "page_personalCenter",
		"pages": [{
			"path": "Article/index",
			"style": {
				"navigationBarTitleText": "我的帖子",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "History/index",
			"style": {
				"navigationBarTitleText": "历史记录",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "MyLike/index",
			"style": {
				"navigationBarTitleText": "我的收藏"
			}
		}]
	}],
	"tabBar": {
		"color": "#a9b7b7",
		"selectedColor": "#98d0f4",
		"borderStyle": "white",
		"list": [
		  {
			"iconPath": "static/images/tabBar/home(1).png",
			"selectedIconPath":"static/images/tabBar/home(2).png",
			"pagePath": "pages/Home/index",
			"text": "首页"
		  },
		  {
			"selectedIconPath":"static/images/tabBar/answer(2).png",
			"iconPath": "static/images/tabBar/answer(1).png",
			"pagePath": "pages/Answer/index",
			"text": "答疑星球"
		  },
		  {
			"selectedIconPath":"static/images/tabBar/forum(2).png",
			"iconPath": "static/images/tabBar/forum(1).png",
			"pagePath": "pages/Forum/index",
			"text": "话题论坛"
		  },
		  {
			"selectedIconPath":"static/images/tabBar/user(2).png",
			"iconPath": "static/images/tabBar/user(1).png",
			"pagePath": "pages/PersonalCenter/index",
			"text": "我的"
		  }
		]		
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#f7f7f7"
	}
}
